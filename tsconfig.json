{
  "compilerOptions": {
    "target": "es2017",
    "types": [
      "node",
      "jest"
    ],
    "module": "commonjs",
    "lib": [
      "ES6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": [
    "./src/*"
, "src/utils/indiceCalculation.ts"  ],
  "exclude": [
    "__tests__/****"
  ]
}
